{
  "name": "file-script-runner",
  "displayName": "File Script runner",
  "description": "Run shell script for a file",
  "publisher": "jeremyrajan",
  "version": "1.2.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.7.0"
  },
  "galleryBanner": {
    "color": "#102633",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/jeremyrajan/vscode-exts/tree/master/issues"
  },
  "homepage": "https://github.com/jeremyrajan/vscode-exts/tree/master/file-script-runner",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremyrajan/vscode-exts/tree/master/file-script-runner"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Extension Packs"
  ],
  "activationEvents": [
    "onCommand:extension.run"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.run",
        "title": "Run Script"
      }
    ],
    "configuration": [
      {
        "title": "File Script Runner",
        "properties": {
          "fileScriptRunner.script": {
            "type": "array",
            "description": "Default shell script to run (with args) for the file",
            "items": {
              "type": "object",
              "title": "Script",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Script Name"
                },
                "script": {
                  "type": "string",
                  "description": "Shell script"
                },
                "default": {
                  "type": "boolean",
                  "description": "Is default?",
                  "default": false
                }
              }
            }
          }
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "filesExplorerFocus",
          "command": "extension.run",
          "group": "9_cutcopypaste"
        }
      ],
      "editor/title/context": [
        {
          "command": "extension.run"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  }
}